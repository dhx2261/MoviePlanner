<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout  xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.CancelDialog">

    <TextView
        android:id="@+id/canceltitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:paddingLeft="@dimen/dp20"
        android:paddingRight="@dimen/dp20"
        android:textSize="@dimen/dp20"
        android:text="Cancel this event?" />

    <TextView
        android:id="@+id/cancelevent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/canceltitle"
        android:paddingLeft="@dimen/dp20"
        android:paddingRight="@dimen/dp20"
        android:textSize="@dimen/dp20" />

    <TextView
        android:id="@+id/cancelvenue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/cancelevent"
        android:paddingLeft="@dimen/dp20"
        android:paddingRight="@dimen/dp20"
        android:textSize="@dimen/dp20" />

    <Button
        android:id="@+id/yes"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/cancelvenue"
        android:layout_marginTop="@dimen/dp20"
        android:layout_marginStart="@dimen/dp20"
        android:text="@string/yes" />

    <Button
        android:id="@+id/no"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/cancelvenue"
        android:layout_toRightOf="@id/yes"
        android:layout_marginTop="@dimen/dp20"
        android:layout_marginLeft="@dimen/dp20"
        android:text="@string/no" />

</RelativeLayout >